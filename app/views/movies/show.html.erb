<section class="movie">
  <div class="summary">
    <h2>
      <%= @movie.title %>
    </h2>
    <h3>
      <%= total_gross(@movie) %>
    </h3>
    <p>
      <%= @movie.description %>
    </p>
  </div>
</section>

<section>
  <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
  <%= link_to "Delete", movie_path(@movie), class: "button", 
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} 
  %>
</section>